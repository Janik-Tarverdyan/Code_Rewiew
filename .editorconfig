# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
max_line_length = 80
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
indent_style = tab
indent_size = 4


[*.html]
indent_style = tab
indent_size = 2

# ToDo List
[TODO]
indent_style = tab
indent_size = 3

# News List
[NEWS]
indent_style = tab
indent_size = 3
